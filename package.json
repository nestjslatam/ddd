  "scripts": {
    "rim": "rimraf dist",
    "build": "nest build",
    "build:lib": "rimraf dist/libs/ddd && tsc -p ./libs/ddd/tsconfig.lib.json && sh ./copy.sh",
    "release:lib": "cd dist/libs/ddd && npm publish --access public",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:lib": "jest --testPathPattern=libs/ddd --coverage --coveragePathIgnorePatterns=node_modules",
    "test:cov:lib:html": "jest --testPathPattern=libs/ddd --coverage --coveragePathIgnorePatterns=node_modules --coverageReporters=text --coverageReporters=html --coverageReporters=lcov",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
