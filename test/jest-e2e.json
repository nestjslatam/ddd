{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "setupFiles": ["<rootDir>/jest-e2e-setup.ts"],
  "forceExit": true,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@nestjslatam/ddd-lib/(.*)$": "<rootDir>/../libs/ddd/src/$1",
    "^@nestjslatam/ddd-lib$": "<rootDir>/../libs/ddd/src",
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}
